@import "../../resource/css/common.wxss";

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    padding: 0;
}

.authorize {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9999;
    opacity: 1;
    display:block;
}

.officialHidden {
    height:0;
    overflow: hidden;
}

/* 获取手机号码 授权 */
.cell {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    z-index: 9999;

    opacity: 0;
    border:none;
}
/* 页面标题 */
.pageTitle {
    box-sizing: border-box;
    width: 100%;
    background-color: rgba(243,67,67,1);
    border: 1px solid rgba(243,67,67,1);
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    text-align: center;
    color: #fff;

    height: 88rpx;
    line-height: 88rpx;
}

/* 搜索 */
.searchColumn {
    display: flex;
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: rgba(243,67,67,1);

    box-sizing: border-box;
    padding-bottom: 28rpx;
}

.searchColumn .richScan{
    width: 84rpx; 
}

.searchColumn .store {
    display: flex;
    width:68rpx;
    flex-direction:column;
    align-items:flex-end;
}

.searchColumn .richScan > view,
.searchColumn .store > view {
    font-family: 'SourceHanSansCN-Heavy';
    font-size: 18rpx;
    letter-spacing: 2rpx;
    color: #fff;
}

.searchColumn .richScan image,
.searchColumn .store image {
    display: block;
    color: #fff;
    margin-bottom: 7rpx;
}

.searchColumn .richScan image {
    width: 34rpx;
    height: 34rpx;
    margin-left: 14rpx;
}

.searchColumn .store image {
    width: 40rpx;
    height: 34rpx;

    right:0;
}


.searchColumn .search {
    flex: auto;
    background-color: #fff;
    border-radius: 30rpx;

    display: flex;
    height: 60rpx;
    align-items: center;
}

.searchColumn .search image {
    display: block;
    width: 30rpx;
    height: 30rpx;
    padding-left: 30rpx;
    padding-right: 20rpx;
}


.searchColumn .search input {
    font-family: PingFangSC-Regular;
    font-size:28rpx;
    color:rgb(153,153,153);
    height:100%;
    width:90%;
}


