.card {
    background-color: #fff;
    border-radius: 20rpx;
    border:2px solid #fff;
    margin-bottom: 30rpx;

    margin-left: 30rpx;
    margin-right: 30rpx;

    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.card .title {
    background-color: rgba(243,67,67,1);
    color:#fff;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;

    text-align: center;
    padding-top: 15rpx;
    padding-bottom: 15rpx;

    border:1px solid rgba(243,67,67,1);
    margin-top:-4rpx;
    margin-left:-3rpx;
    margin-right: -3rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;

}

.card .item {
    position: relative;
    padding: 34rpx 0 28rpx 0;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom:1px solid #eee;
}

.card .item:last-child{
    border-bottom:none;
}

.card .item .header {
    display: flex;
    line-height:30rpx;
    align-items:center;
}

.card .item .header .time {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.card .item .header .time > image {
    width:40rpx;
    height:40rpx;
    padding-left: 30rpx;
    padding-right: 20rpx;
}

.card .item .header .tag {
    width:66rpx;
    color:#fff;
    font-family:PingFangSC-Regular;
    font-size:20rpx;
    border-radius:6rpx;
    text-align:center;
    font-weight:bold;
    line-height: 30rpx;
    padding-right: 6rpx;
}

.card .item .header .project {
    padding: 0 12rpx;
    color:rgb(51,51,51);
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    line-height: 30rpx;

    font-weight: bold;
    max-width:340rpx;

    word-break:keep-all;           /* 不换行 */
    white-space:nowrap;          /* 不换行 */
    overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.card .item .header .clash > image {
    display: block;
    width:30rpx;
    height:30rpx;    
}

.card .item .header .time {
    flex: 197rpx;

    color:rgb(243,67,67);
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    line-height: 30rpx;
}

.card .item .clause {
    display: flex;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    margin-top: 21rpx;
    line-height: 30rpx;
}

.card .item .clause .name {
    font-family: PingFangSC-Regular;
    min-width: 90rpx;
}

.card .item .clause  .definite {
    width:420rpx;
    font-family: PingFangSC-Regular;
    word-break:keep-all;              /* 不换行 */
    white-space:nowrap;               /* 不换行 */
    overflow:hidden;                  /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;           /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.card .item .clause .remarks {
    max-width: 280rpx;
}
.card .item .clause textarea {
    width:280rpx;
    height:auto;    
}

.card .item .footer {
    position: absolute;
    right: 0;
    bottom: 28rpx;
    display: flex;
    z-index: 1000;
}

.card .item .footer > view,
.card .item .footer > button {
    box-sizing: border-box;

    height: 120rpx;
    margin:0;
    padding: 0;
    border-radius: 0;
    border:none;

    display: flex;
    flex-direction: column-reverse;
    line-height: 1;
    background-color:#fff;
}

.card .item .footer > view > view,
.card .item .footer > button > view{
    box-sizing: border-box;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    text-align: center;

    border-radius: 6rpx;
    line-height: 50rpx;
    width: 100rpx;
}

.card .item .footer .cancel,
.card .item .footer .share {
    background-color: rgba(255, 255, 255, 0);
}

.card .item .footer .cancel > view {
    color:rgb(177,177,177);
    border: 1px solid rgb(177,177,177);
}

.card .item .footer .share {
    margin-left:14rpx;
}

.card .item .footer .share > view{
    border: 1px solid rgba(243,67,67,1);
    background-color: rgba(243,67,67,1);
    color: #fff;
}


