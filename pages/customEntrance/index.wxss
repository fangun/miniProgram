    font-size: 26rpx;
}

.fold .box .item .time {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;

    display: flex;
    flex-direction: column;
    justify-content:space-between;
    height:100rpx;
    text-align: right;
}

.fold .box .item .time > view {
    width:100%;
}

.fold .box .item .time > view:first-child {
    color: rgb(153,153,153); 
}

.fold .box .item .time > view:nth-child(2) {
    color: rgb(243,67,67); 
}

.fold .box .item > .state {
    font-family: PingFangSC-Regular;
    font-size: 27rpx;
    color: rgb(243,67,67);
    text-align: center;

}

.modalDlg .fold .box .item > .state {
