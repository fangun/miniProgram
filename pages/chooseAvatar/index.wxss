page {
    background-color: #eee;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 88rpx 0 0 0;
}

.pageTitle {
    position: fixed;
    top:0;
    left:0;
    right:0;
    height: 88rpx;
    line-height: 88rpx;

    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
}

.card {
    display: flex;
    justify-content:flex-start;
    flex-wrap: wrap;
    padding-left: 10rpx;
    padding-right: 10rpx;
    margin:30rpx;

    border-radius: 10rpx;
    background-color: #fff;

    box-shadow:2px 2px 2px rgba(0,0,0,.2);
}

.card > view {
    margin:30rpx;
    width: 160rpx;
    height:160rpx;

}

.card > view > image {
    display: block;
    width: 100%;
    height: 100%;

    border-radius: 50%;
}

.card > view .active {
    border:2px solid rgb(221, 9, 4);
}

.modifyAvatar {
    background-color:rgb(245, 65, 60);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;

    border-radius: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top:109rpx;
}

.modifyAvatar.active {
    background-color:rgb(221, 9, 4);
}

.disableClick {
    pointer-events: none;
    cursor: default;
    background-color:rgb(251, 161, 160);
}