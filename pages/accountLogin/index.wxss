.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    padding: 0;
}

.logo {
    display: block;
    width:410rpx;
    height:330rpx;
    margin-left: auto;
    margin-right: auto;

    margin-top: 114rpx;
    margin-bottom: 95rpx;
}

.loginForm {
    width: calc(100% - 200rpx);
    margin-left: auto;
    margin-right: auto;
}

.loginForm .item {
    border-bottom:2px solid rgb(242, 242, 242);

    display: flex;

    height: 71rpx;
    box-sizing: border-box;
    padding-bottom: 25rpx;
    margin-bottom: 25rpx;
}

.loginForm .item > view { 
    height: 46rpx;
}

.loginForm .item > view:nth-child(1) {
    width: 60rpx;
}

.loginForm .item > view:nth-child(2) {
    flex: auto;
}

.loginForm .item > view:nth-child(3) {
    width:60rpx;
    padding-top: 4rpx;
}

.loginForm .item:first-child .icon image {
    display: block;
    width: 30rpx;
    height: 46rpx;
}

.loginForm .item:nth-child(2) .icon image {
    display: block;
    width: 36rpx;
    height: 46rpx;
}

.loginForm .item:nth-child(2) .other image {
    display: block;
    width: 50rpx;
    height: 32rpx;
}

.loginForm .item .inputText {
    font-family:PingFangSC-Regular;
    font-size:28rpx;
    color:#333;

    height: 71rpx;
}

.loginForm .item .inputText input {
    padding-top: 4rpx;
    padding-bottom: 24rpx;
}

.loginForm .item .inputText input,
.loginForm .item .inputText input::placeholder{
    height: 42rpx;
    line-height: 42rpx;
    width:100%;
    min-height: 42rpx;
}


.box {
    display: flex;

    justify-content: space-between;
}

.box .freeOpen {
    width: 260rpx;
    height: 70rpx;
    line-height: 70rpx;

    font-family:PingFangSC-Regular;
    font-size:26rpx;
    color:rgb(243,67,67);

    box-sizing: border-box;
    border: 1px solid rgb(243,67,67);
    border-radius: 8rpx;
    background-color: #fff;
    text-align: center;
    
}

.box .login {
    width: 260rpx;
    height: 70rpx;
    line-height: 70rpx;

    font-family:PingFangSC-Regular;
    font-size:26rpx;
    color:#fff;

    box-sizing: border-box;
    border: 1px solid rgb(245, 65, 60);
    border-radius: 8rpx;
    background-color: rgb(245, 65, 60);
    padding: 0;
    margin: 0;
}


/* 功能性按钮 */
.fnlist {
    display: flex;
    justify-content: space-between;

    font-family:PingFangSC-Regular;
    font-size:26rpx;
    color:rgb(153,153,153);

    margin-bottom: 268rpx;
}


.login.active {
    background-color:rgb(221, 9, 4);
}

.disableClick {
    pointer-events: none;
    cursor: default;
    background-color:rgb(251, 161, 160);
}