
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 0;
}

.pageTitle {
    width:100%;
    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;
}

.des {
    font-family:PingFangSC-Regular;
    font-size:24rpx;
    color:rgb(102,102,102);
    text-align: center;
    width: 479rpx;
    line-height: 1.5;

    margin-left: auto;
    margin-right: auto;
    padding-top: 30rpx;
    padding-bottom: 35rpx;
}

.box {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.box > .header {
    padding-bottom: 20rpx;

    font-family:PingFangSC-Regular;
    font-size: 28rpx;
    color: #000;
}

.box > textarea {
    font-family:PingFangSC-Regular;
    font-size:28rpx;
    color:#333;
    border:1px solid #eee;

    box-sizing:border-box;
    width:100%;
    padding:20rpx 30rpx;
}


.feedback {
    background-color:rgb(245, 65, 60);

    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;

    border-radius: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;

    margin-top:43rpx;
}

.feedback.active {
    background-color:rgb(221, 9, 4);
}

.disableClick {
    pointer-events: none;
    cursor: default;
    background-color:rgb(251, 161, 160);
}