.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 0;
}

.pageTitle {
    width:100%;
    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;
}

.box {
    border-top: 30rpx solid #eee;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.item {
    display: flex;
    align-items: center;

    height: 100rpx;

    font-family:PingFangSC-Regular;
    font-size: 32rpx;
    color: rgb(102, 102, 102);
    border-bottom: 1px solid #eee;

    zoom: 1;
}

.item:after{
    content: "020"; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;  
}

.box .item > view,
.box .item > input {
    float: left;
}

.box .item > view {
    width:240rpx;
}

.item input {
    width:100%;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
}

.modifyPassword {
    background-color:rgb(245, 65, 60);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;

    border-radius: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top:306rpx;
}

.modifyPassword.active {
    background-color:rgb(221, 9, 4);
}

.disableClick {
    pointer-events: none;
    cursor: default;
    background-color:rgb(251, 161, 160);
}
