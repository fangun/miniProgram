page {
    background-color: #eee;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 0;
}

.pageTitle {
    width:100%;
    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;
}

.des {
    font-family:PingFangSC-Regular;
    font-size:24rpx;
    color:rgb(102,102,102);

    padding: 30rpx;
}

.name {
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #fff;
    height: 100rpx;
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    color: #000;
}

.modifyName {
    background-color:rgb(245, 65, 60);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;

    border-radius: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top:455rpx;
}


.modifyName.active {
    background-color:rgb(221, 9, 4);
}

.disableClick {
    pointer-events: none;
    cursor: default;
    background-color:rgb(251, 161, 160);
}