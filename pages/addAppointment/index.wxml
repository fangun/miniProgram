<!--index.wxml-->
<view class="container">
  <view class="pageTitle">{{pageTitle}}</view>
  <block wx:if="{{voiceShow}}">
      <view class="header">试试下面这样说</view>

      <view class="card">我要在本周六下午两点半到四点半和小张去篮球场打球</view>

      <view class="card">我在明天下午五点到六点半去接小孩</view>

      <view class="mdi">点击手动输入</view>

      <view class="voiceInput">
        <image src="../../resource/images/common/voice3.png" />
      </view>
  </block>

  <block wx:else>
    <textarea class="programInput" placeholder="请输入预约项目" auto-height style="min-height: 90rpx;"></textarea>

    <!-- 快捷标签 -->
    <view class="box">
        <view class="itemHead">
          <view class="des">快捷标签</view>
          <view></view>
        </view>
        <view class="itemList">
          <view class="item">翻滚网</view>
          <view class="item">翻滚美</view>
          <view class="item">翻滚艺术</view>
          <view class="item">翻滚人潮</view>
          <view class="item">翻滚社区</view>
        </view>
    </view>

    <!-- 起止日期 -->
    <view class="bbox">
      <view class="bitem">
        <view>
          <text>开始时间</text>
        </view>
        <view>周六 09月29日 15:00</view>
        <view><image class="foldIcon" src="../../resource/images/common/icon-r3.png"/></view>
      </view>

      <view class="bitem">
        <view>
          <text>结束时间</text>
        </view>
        <view>15:00</view>
        <view><image class="foldIcon" src="../../resource/images/common/icon-r3.png"/></view>
      </view>
    </view>

    <view class="moreInfo">
        <!-- 选填 -->
        <view class="bbox xt">
          <view class="bitem xt">
            <view>
              <input class="grayStyle" type="text" placeholder="参与人员  (选填)"> </input>
            </view>
            <view></view>
            <view></view>
          </view>

          <view class="bitem xt">
            <view>
              <input class="grayStyle" type="text" placeholder="添加地址  (选填)"></input>
            </view>
            <view></view>
            <view><image class="foldIcon" src="../../resource/images/common/location3.png"/></view>
          </view>
        </view>

        <textarea class="programInput" placeholder="添加备注" auto-height style="min-height: 140rpx;margin-top:30rpx;"></textarea>
    </view>

    <view class="moreInfoTag">
      收起更多
      <image src="../../resource/images/common/icon-t3.png"></image>
    </view>

  </block>



</view>
