@import "../../resource/css/common.wxss";
page {
    background-color: #eee;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 0;
}

.pageTitle {
    width:100%;
    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;
}

.header {
    padding: 50rpx;
    text-align: center;

    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: rgb(86, 86 , 86);
}

.card {
    box-sizing:border-box;
    height:160rpx;
    margin:0 30rpx 30rpx 30rpx;
    padding:0 60rpx;
    
    background-color:#fff;
    font-family:PingFangSC-Regular;
    font-size:34rpx;
    color:rgb(86, 86 , 86);
    border-radius:10rpx;
    text-align:center;
    line-height:1.5;
    display:flex;
    align-items:center;

    box-shadow:2px 2px 2px rgba(0,0,0,.2)
}

.mdi {
    padding:20rpx;
    text-align:center;
    font-family:PingFangSC-Regular;
    font-size:28rpx;
    color:rgb(86, 86 , 86);
    font-weight:bold;
}

.voiceInput{
    position: absolute;

    bottom: 144rpx;
    left: 0;
    right: 0;

    margin:auto;

    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    box-shadow:1px 1px 1px 0px rgba(0,0,0,.4);
}

.voiceInput image {
    display: block;
    width: 100%;
    height: 100%;
}