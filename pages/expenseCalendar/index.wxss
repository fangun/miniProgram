.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  } 
  
.container {
    display: block;
    padding: 0;
}

.pageTitle {
    width:100%;
    background-color:rgba(243,67,67,1);
    font-family:PingFangSC-Medium;
    font-size:36rpx;
    text-align:center;
    color:#fff;
    line-height: 88rpx;
}

.totalDes {
    position: relative;
    background-color: #eee;
    padding: 30rpx;
    line-height: 1;
}

.totalDes .date {
    font-family:PingFangSC-Regular;
    font-size:36rpx;
    color:rgb(51, 51, 51);

    margin-bottom: 22rpx;
}

.totalDes .expense {
    font-family:PingFangSC-Regular;
    font-size:30rpx;
    color:rgb(102, 102, 102);
}

.totalDes .calendarIcon {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 30rpx;

    width: 60rpx;
    height:60rpx;
    z-index: 10;

    margin:auto;
}

/* 列表 */
.item {
    display: flex;
}

.item .logo {
    padding: 32rpx 34rpx 0 30rpx;
}

.item .logo image {
    display: block;
    width:84rpx;
    height:84rpx;
}

.item .content {
    flex: auto;

    display: flex;
    justify-content: space-between;
    padding: 30rpx 30rpx 30rpx 0;
    border-bottom: 1px solid #eee;

    line-height: 1;
}

.content .oneC,
.content .twoC {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.content .oneC view:first-child{
    font-family:PingFangSC-Regular;
    font-size:36rpx;
    color:rgb(51, 51, 51);

    margin-bottom: 22rpx;
}

.content .oneC view:nth-child(2){
    font-family:PingFangSC-Regular;
    font-size:30rpx;
    color:rgb(51, 51, 51);

    margin-bottom: 22rpx;
}

.content .oneC view:nth-child(3){
    font-family:PingFangSC-Regular;
    font-size:28rpx;
    color:rgb(102, 102, 102);
}

.content .twoC view {
    text-align: right;
    color:rgb(243, 67, 67);
}
.content .twoC view:first-child{
    font-family:PingFangSC-Bold;
    font-size:38rpx; 
}

.content .twoC view:nth-child(3){
    font-family:PingFangSC-Regular;
    font-size:30rpx;
}

