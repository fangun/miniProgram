<view class="calendar">
  <view>{{test}}</view>
	<view class='tit'>
		<view class='pre' bindtap='gotoPreMonth'>{{'<'}}</view>
		<view class='current'>
      <text>{{currentMonth}}月，</text>
      <text>{{currentYear}}</text>
    </view>
		<view class='next' bindtap='gotoNextMonth'>{{'>'}}</view>
	</view>

	<view class='content'>
		<view>日</view>
		<view>一</view>
		<view>二</view>
		<view>三</view>
		<view>四</view>
		<view>五</view>
		<view>六</view>
		<view 	wx:for="{{allArr}}" 	wx:key="{{index}}"	class="able {{item.month == 'current' ? '' : 'gray'}} {{item.disabled?'disabled':''}}  {{(item.date>0&&item.date<todayDay)?'ago':''}} {{item.date==todayDay?'underline':''}} {{selectDay==item.dayId?'selectDay':''}}"  data-year='{{currentYear}}' data-month='{{currentMonth}}' data-date = '{{item.date}}' bindtap='{{item.month == "current"&&item.disabled==false&&item.date>=todayDay?"selectDate":""}}' >{{item.date}}</view>
	</view>
</view>